<drftpd>
  <!-- SLAVE CONFIG -->
  <root>site</root>
  <!--
  Additional roots are allowed. Files will be striped across roots
  <root>site2</root>
  -->

  <!-- MASTER CONFIG -->
  <privpath>
    <path>/groups</path>
  </privpath>
  
  <msgpath>
    <path>/incoming</path>
    <text>
      Upload here.
      Rules:
      #1 - Don't upload crap!
    </text>
  </msgpath>
  
  <replicate>
    <path>/</path>
    <uploadto>*</to>
    <redundancy>1</redundancy>
  </replicate>
  
  <replicate>
    <path>/linux</path>
    <uploadto>mog,*</uploadto>
    <replicateto>mog</replicateto>
    <redundancy>ALL</redundancy>
  </replicate>
  
  <!-- use ProFTPD inspired config -->
  <location path="/">
    <message>
      Welcome to DrFTPD. You are now in the root directory
    </message>
    <path>/</path>
    <allow>read,write</allow>
  </perm>
  
</drftpd>
